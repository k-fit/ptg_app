      <td class = "form_elt">
        <div class="field">
          <%= f.select(:buy5, [["Buy", true], ["Sell", false]], {:include_blank => "--select Buy/Sell--" }) %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
          <%= f.label  :settlement5, nil, :class => "multitrade_label" %>
          <%= f.text_field :settlement5, :class => "multitrade_entry" %>
