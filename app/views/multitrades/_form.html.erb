          <%= f.label 'commission', nil, :class => "multitrade_label" %>
          
        </div>
      </td>
      <td class = "form_elt">
        <div class = "field">
          <%= f.check_box :commission, :class => "multitrade_label" %>
        </div>
      </td>
    </tr>
    <tr>
      <td class = "form_elt">
        <div class="field">
          <%= f.select(:buy1, [["Buy", true], ["Sell", false]], {:include_blank => "--select Buy/Sell--" }) %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
