<%= form_for(@multitrade, :as => 'multitrades_form', :url => {:action => "create", :controller => "multitrades"}) do |f| %>
  
  <% if @multitrade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@multitrade.errors.count, "error") %> prohibited this trade from being saved:</h2>

      <ul>
      <% @multitrade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table>
    <tr>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :contract_type, nil, :class => "multitrade_label" %>
          <%= f.select(:contract_type, ["CU", "71", "EH"], {:include_blank => "Select One"}, {:class => "multitrade_entry"}) %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :volume, nil, :class => "multitrade_label" %>
          <%= f.text_field :volume, :class => "multitrade_entry" %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :price, nil, :class => "multitrade_label" %>
          <%= f.text_field :price, :class => "multitrade_entry" %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :price2, nil, :class => "multitrade_label" %>
          <%= f.text_field :price2, :class => "multitrade_entry" %>
        </div>
      </td>
    </tr>
    <tr>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :broker, nil, :class => "multitrade_label" %>
          <%= f.select(:broker, ["Advantage", "Atlas", "Blue Ocean", "ICAP", "IVG", "Progressive", "SCB", "Spectron", "Star Fuels", "Other"], {:include_blank => "Select One"}, :class => "multitrade_entry") %>
        </div>
      </td>
      <td class = "form_elt">
        <div class="field">
          <%= f.label :trader, nil, :class => "multitrade_label" %>
          <%= f.text_field :trader, :class => "multitrade_entry" %>
        </div>
      </td>
      <td class = "form_elt">
